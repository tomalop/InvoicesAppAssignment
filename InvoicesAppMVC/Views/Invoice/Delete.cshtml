@model InvoicesAppMVC.Models.Invoice

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete invoice</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Recipient)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Recipient)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Paid)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Paid)
        </dd>
    </dl>
    @* TODO: Retrieve DisplayName from collection property *@
    @* TODO: Add Total Cost *@
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Item ID</th>
                <th scope="col">Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody id="tbItems">
            @if (Model.Items != null && Model.Items.Count > 0)
            {
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.ItemId)</td>
                        <td>@Html.DisplayFor(model => item.Name)</td>
                        <td>@Html.DisplayFor(model => item.Amount)</td>
                        <td>@Html.DisplayFor(model => item.Price)</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin:16px 0px 8px 0px">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    }

</div>
<div>
    @Html.ActionLink("Back to list", "Index")
</div>