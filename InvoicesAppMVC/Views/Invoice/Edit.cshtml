@model InvoicesAppMVC.Models.Invoice

<h2>Edit invoice</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Item</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Id)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Recipient, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Recipient, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Recipient, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Paid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Paid)
                    @Html.ValidationMessageFor(model => model.Paid, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <!--Invoice Items-->
        @* TODO: Retrieve DisplayName from collection property *@
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Item ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Count > 0)
                { 
                    @for (int i = 0; i<Model.Items.Count; i++)
                    {
                        <tr id="trItem@(i)">
                            <td>@Html.EditorFor(model => model.Items[i].ItemId, new { htmlAttributes = new { @class = "form-control" } })</td>
                            <td>@Html.EditorFor(model => model.Items[i].Name, new { htmlAttributes = new { @class = "form-control" } })</td>
                            <td>@Html.EditorFor(model => model.Items[i].Amount, new { htmlAttributes = new { @class = "form-control", @pattern = "^[0-9]\\d*$", @step="1", @min="1" } })</td>
                            <td>@Html.EditorFor(model => model.Items[i].Price, new { htmlAttributes = new { @class = "form-control", @type = "number", @pattern = "^[0-9]\\d*$", @step = "1", @min="0" } })</td>
                <td>            <input class="btn btn-link" type="button" value="Remove" onclick="removeRow(@(i));"/></td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to list", "Index")
</div>

<script src="~/bundles/jqueryval"></script>
